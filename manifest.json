{
  "manifest_version": 3,
  "name": "Demo Recorder",
  "version": "1.0.0",
  "description": "Record user actions and create polished product demos automatically",
  
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "tabs",
    "webNavigation",
    "downloads",
    "desktopCapture"
  ],
  
  "host_permissions": [
    "<all_urls>"
  ],
  
  "background": {
    "service_worker": "background.js"
  },
  
  "action": {
    "default_popup": "popup.html"
  },
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["overlay.css"],
      "run_at": "document_idle",
      "all_frames": false
    }
  ],
  
  "web_accessible_resources": [
    {
      "resources": ["overlay.css", "screen-recorder.html", "screen-recorder.js"],
      "matches": ["<all_urls>"]
    }
  ]
}